    contract RhoSpec(@"testSuite", setup, @tests) = {
      new dummyTeardown in {
        contract dummyTeardown(_, _, ackCh) = {
          ackCh!(Nil)
        } |

        RhoSpec!("testSuite", *setup, *dummyTeardown, tests)
