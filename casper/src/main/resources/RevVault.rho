    new mintCh, vaultMapStore in {
      vaultMapStore!({}) |
      @MakeMint!(*mintCh) |
      for (mint <- mintCh) {

        contract RevVault(@"deployerAuthKey", ret) = {

          new deployerPubKeyBytesCh in {
            _getIdentity!(*deployerPubKeyBytesCh) |
