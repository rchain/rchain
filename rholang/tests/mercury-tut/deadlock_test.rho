new testResult, philosopher1, philosopher2 in {
  new north, south, knife, spoon in {
    north!(*knife) |
    south!(*spoon) |
    for (@knf <- north; @spn <- south) {
      philosopher1!(true) |
      north!(knf) |
      south!(spn)
    } |
    for (@spn <- south; @knf <- north) {
      philosopher2!(true) |
      north!(knf) |
      south!(spn)
    }
  } |
  for(_ <- philosopher1; _ <- philosopher2) {
    testResult!(true)
  }
}